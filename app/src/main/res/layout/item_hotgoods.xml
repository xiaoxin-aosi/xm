<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:background="#DADADA"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_hot"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hot_name"
        android:text="aer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/iv_hot"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hot_brief"
        android:text="aer"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_name"
        app:layout_constraintLeft_toRightOf="@id/iv_hot"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hot_price"
        android:text="aer"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_brief"
        app:layout_constraintLeft_toRightOf="@id/iv_hot"/>
</androidx.constraintlayout.widget.ConstraintLayout>